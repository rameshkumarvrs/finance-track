<%= render 'layouts/messages'%>

<%if @friends%>
  <div class= "card card-header results-block">
    <table class ="col-md-12">
      <tbody>
        <%@friends.each do |friend|%>
        <tr>
          <td><strong>Email:</strong><%=friend.email%></td>
          <td><strong>Name:</strong><%=friend.full_name%></td>
          <td><strong>Actions</strong><%=link_to "View Profile", "#", class: "btn btn-success"%></td>
   
          <td><%= link_to "Follow Friend", "#", class: "btn btn-success", method: :post%></td>
        </tr>
       <%end%>
      </tbody>
    </table>     
  </div>
<%end%>  