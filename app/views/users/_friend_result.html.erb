<%= render 'layouts/messages'%>

<%if @friends%>
  <div class= "card card-header results-block">
    <table class ="col-md-12">
      <tbody>
        <%@friends.each do |friend|%>
        <tr>
          <td><strong>Email:</strong><%=friend.email%></td>
          <td><strong>Name:</strong><%=friend.full_name%></td>
          <td><strong>Actions</strong><%=link_to "View Profile", user_path(friend), class: "btn btn-success"%></td>
          <%if current_user.not_friend_with?(friend.id)%>
          <td><%= link_to "Follow Friend", friendships_path(friend: friend), class: "btn btn-success", method: :post%></td>
          <%else%>
         <td><span class = "badge badge-secondary">
           Already Friends
         </span></td>
          <%end%>
        </tr>
       <%end%>
      </tbody>
    </table>     
  </div>
<%end%>  